{
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "noEmit": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "types": []
  },
  "include": [
    "src/**/*"
  ]
}

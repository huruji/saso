{
  "root": true,
  "extends": "airbnb",
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "semi": ["never", {
      "beforeStatementContinuationChars": "always"
    }],
    "func-names": 0,
    "eqeqeq": 0,
    "no-plusplus": 0,
    "prefer-destructuring": ["error", {
      "array": false,
      "object": false
    }],
    "no-param-reassign": ["error", {
      "props": false
    }],
    "no-console": 0,
    "no-restricted-syntax": 0
  }
}
